<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo11.Views.Operaciones">
    <ContentPage.Content>
        <StackLayout Padding="50">
            <Entry Placeholder="valor1" FontSize="Title" Text="{Binding Valor1}"></Entry>
            <Entry Placeholder="valor2" FontSize="Title" Text="{Binding Valor2}"></Entry>
            <Entry Placeholder="valor3" FontSize="Title" Text="{Binding Valor3}"></Entry>
            <Button Text="Sumar" FontSize="Title" BackgroundColor="White" Command="{Binding Sumar}"/>
            <Button Text="Multiplicar" FontSize="Title" BackgroundColor="White" Command="{Binding Multiplicar}"/>
            <Label Text="{Binding ResultadoSuma}" FontAttributes="Bold" FontSize="Title"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>